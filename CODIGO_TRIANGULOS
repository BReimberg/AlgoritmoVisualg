Algoritmo "codigo_triangulos"

Var
   L1, L2, L3: Real
   eq, es, tri: Logico
Inicio
   Escreva("Digite o primeiro valor do lado do triângulo: ")
   Leia(L1)
   Escreva("Digite o segundo valor do lado do triângulo: ")
   Leia(L2)
   Escreva("Digite o terceiro valor do lado do triângulo: ")
   Leia(L3)
   eq <- (L1 = L2) e (L2 = L3)
   es <- (L1 <> L2) e (L2 <> L3) e (L1 <> L3)
   tri <- (L1 < L2 + L3) e (L2 < L1 + L3) e (L3 < L1 + L2)
   Escreval("Pode formar um TRIÂNGULO? ", tri)
   Escreval("O triângulo é EQUILATERO? ", eq)
   Escreval("O triângulo é ESCALENO? ", es)

Fimalgoritmo
