Algoritmo "matriz_identidade"
//criar uma matriz identidade de 3a ordem

Var
   mid: vetor[1..3, 1..3] de inteiro
   l, c: inteiro

Inicio
     Para l <- 1 ate 3 faca
         Para c <- 1 ate 3 faca
            Se (l = c) entao
               mid[l,c] <- 1
            senao
               mid[l,c] <- 0
            FimSe
         FimPara
     FimPara
     
     Para l <- 1 ate 3 faca
          Para c <- 1 ate 3 faca
             escreva(mid[l,c]:3)
          FimPara
          escreval()
     FimPara

Fimalgoritmo
