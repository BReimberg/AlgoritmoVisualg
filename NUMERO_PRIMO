Algoritmo "numero_primo"

Var
   c, n, cd: inteiro

Inicio
    c <- 1
    cd <- 0
    escreva("Digite um número: ")
    leia(n)
    Repita
          escreval(c)
          Se (n % c = 0) entao
             cd <- cd + 1
          FimSe
          c <- c + 1
    Ate (c > n)
    Se (cd > 2) entao
       escreval("O valor ", n, " não é primo!")
    senao
         escreval("O valor ", n, " é primo!")
    FimSe

Fimalgoritmo
