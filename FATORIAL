Algoritmo "fatorial"

Var
   c, n, f: inteiro
   resp: caractere

Inicio
Repita
      escreva("Digite um número: ")
      leia(n)
      c <- n
      f <- 1
      Repita
            f <- f * c
            c <- c -1
      Ate (c < 1)
      escreval("O valor do fatorial de ", n, " é igual a ", f)
      escreval("---------------------------------------------")
      escreva("Deseja continuar? [s/n]")
      leia(resp)
      LimpaTela
Ate (resp = "n")

Fimalgoritmo
